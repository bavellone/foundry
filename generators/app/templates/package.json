{
  "name": "<%= appName %>",
  "namespace": "<%= appNS %>",
  "version": "0.0.1",
  "main": "server.js",
  "description": "<%= appDesc %>",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "build": "NODE_ENV=production gulp build",
    "build:dev": "NODE_ENV=development gulp build",
    "deploy": "NODE_ENV=production gulp deploy",
    "dev": "NODE_ENV=development gulp watch",
    "prod": "NODE_ENV=production gulp watch",
    "dev:dbg": "NODE_ENV=development DEBUG=app:* gulp watch",
    "test": "NODE_ENV=testing gulp test",
    "test:dbg": "NODE_ENV=testing DEBUG=app:* gulp test",
    "start:win": "set NODE_ENV=production&&node server.js",
    "build:win": "set NODE_ENV=production&&gulp build",
    "build:dev:win": "set NODE_ENV=development&&gulp build",
    "dev:win": "set NODE_ENV=development&&gulp watch",
    "prod:win": "set NODE_ENV=production&&gulp watch",
    "dev:dbg:win": "set NODE_ENV=development&&set DEBUG=app:*&&gulp watch",
    "deploy:win": "set NODE_ENV=production&&gulp build&&gulp deploy",
    "test:win": "set NODE_ENV=testing&&gulp test",
    "test:dbg:win": "set NODE_ENV=testing&&DEBUG=app:*,test:*&&gulp test"
  },
  "dependencies": {
    "apisauce": "^0.5.0",
    "async": "^2.0.1",
    "babel": "^6.5.2",
    "babel-core": "^6.14.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "bcryptjs": "^2.3.0",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "glob": "^7.0.6",
    "joi": "^9.0.4",
    "jsonwebtoken": "^7.1.9",
    "lodash": "^4.15.0",
    "mandrill-api": "^1.0.45",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "neo4j-driver": "^1.1.0-M01",
    "node-uuid": "^1.4.7",
    "q": "^1.4.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.4",
    "rxjs-es": "^5.0.0-beta.11",
    "serialize-javascript": "^1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babelify": "^7.3.0",
    "bower-resolve": "^2.2.1",
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.12",
    "chai": "^3.5.0",
    "eslint": "^3.4.0",
    "eslint-plugin-lodash": "^1.10.1",
    "eslint-plugin-react": "^6.2.0",
    "fs-extra": "^0.30.0",
    "gulp": "^3.9.1",
    "gulp-bytediff": "^1.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-filesize": "^0.0.6",
    "gulp-if": "^2.0.1",
    "gulp-inject": "^4.1.0",
    "gulp-load-plugins": "^1.2.4",
    "gulp-minify-css": "^1.2.4",
    "gulp-mocha": "^3.0.1",
    "gulp-nodemon": "^2.1.0",
    "gulp-notify": "^2.2.0",
    "gulp-sass": "^2.3.2",
    "gulp-tap": "^0.1.3",
    "gulp-uglify": "^2.0.0",
    "livereactload": "^2.2.4",
    "mocha-unfunk-reporter": "^0.4.0",
    "ncp": "^2.0.0",
    "node-notifier": "^4.6.1",
    "react-proxy": "^1.1.8",
    "run-sequence": "^1.2.2",
    "semver": "^5.3.0",
    "supertest": "2.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0",
    "yargs": "^5.0.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.js",
    "semantic": "./bower_components/semantic/dist/semantic.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "semantic": {
      "exports": "semantic",
      "depends": [
        "jquery:jQuery"
      ]
    }
  },
  "paths": {
    "src": {
      "app": {
        "js": [
          "client/**/*.js",
          "shared/**/*.js"
        ],
        "scss": [
          "shared/components/**/*.scss"
        ],
        "test": [
          "test/globals.js",
          "server/**/test.js",
          "shared/**/*.test.js"
        ]
      },
      "vendor": {
        "deps": [
          "classnames",
          "react",
          "react-dom",
          "react-helmet",
          "react-router",
          "react-redux",
          "react-router-redux",
          "redux",
          "redux-thunk",
          "lodash",
          "q",
          "apisauce",
          "moment"
        ],
        "libs": [
          "jquery",
          "semantic"
        ],
        "css": [
          "bower_components/semantic/dist/semantic.css"
        ],
        "fonts": "bower_components/semantic/dist/themes/default/assets/fonts",
        "flags": "bower_components/semantic/dist/themes/default/assets/images/flags.png"
      }
    },
    "dist": {
      "app": {
        "js": {
          "file": "app.bundle.js",
          "dir": "assets/js",
          "entryPoint": "client/index.js"
        },
        "css": {
          "file": "app.bundle.css",
          "dir": "assets/css"
        }
      },
      "vendor": {
        "js": {
          "file": "vendor.bundle.js",
          "dir": "assets/js"
        },
        "css": {
          "file": "vendor.bundle.css",
          "dir": "assets/css"
        },
        "fonts": "assets/fonts"
      }
    }
  }
}
